# ======================================
# 智农链销环境变量配置示例
# ======================================
# 使用说明：
# 1. 复制此文件为 .env
# 2. 根据实际环境填写配置值
# 3. 不要将 .env 提交到版本控制

# ======================================
# 应用基础配置
# ======================================
APP_NAME=智农链销
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# ======================================
# 数据库配置
# ======================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=zhinong_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# ======================================
# Redis配置
# ======================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ======================================
# LLM API密钥（至少配置一个）
# ======================================
# Gemini（推荐，MCPybarra默认）
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI（可选）
OPENAI_API_KEY=

# Qwen（可选，经济实惠）
QWEN_API_KEY=

# DeepSeek（可选）
DEEPSEEK_API_KEY=

# Anthropic（可选）
ANTHROPIC_API_KEY=

# ======================================
# MCPybarra工作流配置
# ======================================
DEFAULT_SWE_MODEL=gemini-2.5-pro
MAX_REFINE_LOOPS=2
MAX_PLANNING_TURNS=4
MAX_CODEGEN_TURNS=5
MAX_PLANNING_TOOL_CALLS=2
MAX_CODEGEN_TOOL_CALLS=3

# ======================================
# 安全配置
# ======================================
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ======================================
# CORS配置（逗号分隔）
# ======================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ======================================
# 支付配置（可选）
# ======================================
# 微信支付
WECHAT_APP_ID=
WECHAT_APP_SECRET=
WECHAT_MCH_ID=
WECHAT_API_KEY=

# 支付宝
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=
ALIPAY_PUBLIC_KEY=

# ======================================
# 短信配置（可选）
# ======================================
SMS_PROVIDER=aliyun
SMS_ACCESS_KEY=
SMS_ACCESS_SECRET=
SMS_SIGN_NAME=智农链销

# ======================================
# 对象存储配置（可选）
# ======================================
OSS_PROVIDER=aliyun
OSS_ACCESS_KEY=
OSS_ACCESS_SECRET=
OSS_BUCKET=zhinong-assets
OSS_ENDPOINT=oss-cn-beijing.aliyuncs.com

# ======================================
# 监控配置（可选）
# ======================================
SENTRY_DSN=
ENABLE_METRICS=true

# ======================================
# 日志配置
# ======================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ======================================
# 功能开关
# ======================================
ENABLE_AUTO_REFINE=true
ENABLE_COST_ALERT=true
ENABLE_STOCK_ALERT=true
